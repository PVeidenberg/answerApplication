{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./types", // this is where you define your types
      "./node_modules/@types" //this where npm packages containing types are located
    ],

  },
  "include": [
    "src",
  ]
}
